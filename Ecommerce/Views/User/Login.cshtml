@model Ecommerce.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="content">
    <div class="container">
        <div class="login-page">
            <div class="dreamcrub">
                <ul class="breadcrumbs">
                    <li class="home">
                        <a href="@Url.Action("Index","Home")" title="Go to Home Page">Home</a>&nbsp;
                        <span>&gt;</span>
                    </li>
                    <li class="women">
                        Login
                    </li>
                </ul>
                <ul class="previous">
                    <li><a href="@Url.Action("Index","Home")">Back to Previous Page</a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="account_grid">
                <div class="col-md-6 login-left wow fadeInLeft" data-wow-delay="0.4s">
                    <h2>NEW CUSTOMERS</h2>
                    <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
                    <a class="acount-btn" href="@Url.Action("Register","User")">Create an Account</a>
                </div>
                <div class="col-md-6 login-right wow fadeInRight" data-wow-delay="0.4s">
                    <h3>REGISTERED CUSTOMERS</h3>
                    <p>If you have an account with us, please log in.</p>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            <span>
                                Email Address
                                <label>
                                    @Html.ValidationMessageFor(model => model.emailID, null, new { style = "color:red" })
                                </label>
                            </span>
                            @Html.TextBoxFor(model => model.emailID)
                        </div>
                        <div>
                            <span>
                                Password
                                <label>
                                    @Html.ValidationMessageFor(model => model.password, null, new { style = "color:red" })
                                </label>
                            </span>
                            @Html.TextBoxFor(model => model.password)
                        </div>
                        <div>
                            <span>
                                Remember me
                                <label>
                                    
                                </label>
                            </span>
                            @Html.CheckBoxFor(model => model.remember_me)
                        </div>
                        <a class="forgot" href="#">Forgot Your Password?</a>
                        <input type="submit" value="Login">

                    }
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
