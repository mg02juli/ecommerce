<div class="banner-top">
    <div class="container">
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo">
                    <h1><a href="@Url.Action("Index","Home")"><span>E</span> -Shop</a></h1>
                </div>
            </div>
            <!--/.navbar-header-->

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>

                    @foreach (var level in ViewBag.menuLevel)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@level.product_type_description <b class="caret"></b></a>
                            <ul class="dropdown-menu multi-column columns-2">
                                <div class="row">

                                    @if (level.Ref_Product_Type1.Count > 0)
                                    {
                                        foreach (var level2 in level.Ref_Product_Type1)
                                        {
                                            <div class="col-sm-6">
                                                <ul class="multi-column-dropdown">
                                                    <h6>@level2.product_type_description</h6>
                                                    @if (level.Ref_Product_Type1.Count > 0)
                                                    {
                                                        foreach (var level3 in level2.Ref_Product_Type1)
                                                        {
                                                            <li>
                                                                <a href="@Url.Action("Products","Products",new { id= level3.product_type_code})">
                                                                    @level3.product_type_description
                                                                </a>
                                                            </li>
                                                        }
                                                    }
                                                </ul>

                                            </div>
                                        }
                                        
                                    }
                                    <div class="clearfix"></div>
                                </div>

</ul>
                        </li>

                    }
                    <li><a href="@Url.Action("Contact","Home")">CONTACT</a></li>
                </ul>
            </div>
            <!--/.navbar-collapse-->
        </nav>
        <!--/.navbar-->
    </div>
</div>